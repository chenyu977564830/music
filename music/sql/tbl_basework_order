Create table tbl_basework_order(
`id` int(11) unsigned NOT NULL AUTO_INCREMENT,
`cr_id` char(19) unique NOT NULL,
`cp_id` int(8) unsigned NOT NULL,
`song_name` varchar(30) NOT NULL,
`song_type` varchar(20) NOT NULL,
`singer` varchar(30) NOT NULL,
`singer_type` varchar(20) NOT NULL,
`lang` varchar(20) NOT NULL,
`cr_type` varchar(20) NOT NULL,
`ly_author` varchar(30) NOT NULL,
`tune_author` varchar(30) NOT NULL,
`album_name` varchar(30) NOT NULL,
`isrc` varchar(20) NOT NULL,
`record_cr` varchar(50) NOT NULL,
`cr_offer` varchar(30) NOT NULL,
`val_period` char(32) NOT NULL,
`create_time` char(32) NOT NULL,
`app_name` varchar(60) NOT NULL,
`cr_status` tinyint(1) NOT NULL DEFAULT '0',
daily_project varchar(40) not null,
commany_name varchar(40) not null,
wcpn varchar(40) not null,
tcpn varchar(40) not null,
cr_proof varchar(200) not null,
cr_Certificate text not null,
pqzm text not null,
csqqk tinyint(1) default 0 comment '0: 未授权1:已授权',
qsqqk tinyint(1) default 0 comment '0: 未授权1:已授权',
byzsqqk tinyint(1) default 0 comment '0: 未授权1:已授权',
lysqqk tinyint(1) default 0 comment '0: 未授权1:已授权',
exclusive tinyint(1) default 0 comment '0: 独家1:非独家',
authorize_start_data char(32) not null,
authorize_over_data char(32) not null,
music_bqslc varchar(40),
xkzms varchar(40),
verify_result tinyint(1) comment '1:合格 2:不合格3:退后',
verify_result_desc tinyint(1) comment '1:审核通过 2:缺给中音授权文件、书写错误 3:CP放弃 4:版权瑕疵 5:无版权材料、超期退回',
bqxcbhg tinyint(1) comment '1:词曲 2:表演者 3:录音制作者 4: 链条不完整、缺身份证',
zmyrsfzm text,
auditor Char(10),
authorize_time Char(32),
bhg_desc Varchar(100),
bqclzt Tinyint(1) default 0 comment  '0:未进行材料匹配1:纸质 2:电子档 3:无版权材料',


PRIMARY KEY (`id`),
UNIQUE KEY `cr_id` (`cr_id`),
KEY `index_cr_id` (`cr_id`),
KEY `index_song_name` (`song_name`),
KEY `index_singer` (`singer`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;




create table tbl_cr_material(
`id` int(11) unsigned NOT NULL AUTO_INCREMENT,
cp varchar(50) not null,
app_name varchar(60) not null,
cr_offer Varchar(30) not null,
cp_id Int(8) unsigned not null,
cr_materialid Char(25) not null,
cr_type	Tinyint(1) default 0 comment '0:日常 1:日常紧急 2:延期 3:认领',
sing_num Smallint(5) not null,
cr_appname Varchar(60) not null,
receive_time Char(12),
bqclzt Tinyint(1) not null comment '1:纸质 2:电子',
app_condition Tinyint(1) comment '1:完结 2:cp放弃 3:超期作废',
past_num smallint(6),
false_num Smallint(6),
auditor	Smallint(5),
archives_num Char(18),
save_path Varchar(70) not null,
archives_time Char(12),

primary key (id),
key index_cp_id(cp_id),
key index_cr_materialid(cr_materialid),
key index_cr_type(cr_type),
key index_auditor(auditor),
key index_archives_num(archives_num)
)engine=innodb auto_increment=1 default charset=utf8;
